{
  "name": "quickpoll",
  "version": "1.0.0",
  "private": true,
  "description": "VDMA QuickPoll - Mobile-optimierte Quiz-Webapp mit Admin-Panel",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "db:generate": "pnpm --filter db generate",
    "db:push": "pnpm --filter db push",
    "db:migrate": "pnpm --filter db migrate",
    "db:studio": "pnpm --filter db studio",
    "db:seed": "pnpm --filter db seed",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop" : "pm2 stop quickpoll-web && pm2 delete quickpoll-web"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "pnpm": "^10.16.1"
  }
}
